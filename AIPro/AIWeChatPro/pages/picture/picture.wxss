/**picture.wxss**/
page {
  background-color: #EDEDED;/*整页*/
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

icon {/*微信里的图标*/
  margin-right: 13px;
  padding-left: 40px;
}

.button{
  display: flex;
  flex-direction: row;
}

.selfbut{

  border: solid 1px rgba(187, 146, 146, 0.651);
  border-radius: 10px;
  text-align: center;
  box-sizing: border-box;
}

.page__hd {
  padding: 16px;
}

.page__image {
  padding: 16px;
  display: flex;
  justify-content: center;
}

.page__title {
  text-align: left;
  font-size: 24px;
  font-weight: 100vw;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.icon-box {
  margin-bottom: 25px;
  display: flex;
  align-items: center;
}

.icon-box__ctn {
  flex-shrink: 100;
}

.icon-box__title {
  font-size: 17px;
}

.icon-box__desc {
  margin-top: 6px;
  font-size: 14px;
  color: #888888;
}

.icon_sp_area {
  margin-top: 10px;
  text-align: left;
}

.recognition_btn {
  padding-top: 10px;
  padding-right: 30px;
  padding-left: 30px;
}