/* pages/compute/compute.wxss */
page{
  height: 100%
}
.content{/*整体背景*/
  margin: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing:  border-box;
  background:rgba(139, 217, 248, 0.5);
  padding-top: 25rpx;
}
.screen/*显示屏*/
{
  background-color: white;
  border-radius: 10px;/*设置圆角*/
  text-align: right;
  width: 720rpx;
  height: 280rpx;
  line-height:280rpx;
  font-size:30px;
  margin-bottom: 20rpx;  
}
.btnGroup{
  display: flex;
  flex-direction: row;
}
.item{/*按钮*/
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .3);
  border-radius: 5px;
  /*字体设置*/
  text-align: center;
  line-height: 150rpx;
  color: white;
}
.orange{
  /*边框设置*/
  border: solid 1px rgb(223, 154, 25);
  background-color:orange;
  box-sizing: border-box;
}
.gray{
  border: solid 1px rgba(187, 146, 146, 0.651);
  background-color: gray;
  box-sizing: border-box;
 }
.blue{
  border: solid 1px rgba(0, 0, 0, 0.301);
  background-color: #666666;
  box-sizing: border-box;
}